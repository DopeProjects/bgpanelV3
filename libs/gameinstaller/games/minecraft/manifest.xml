<!-- Game Manifest -->
<game>
	<name>minecraft</name>

	<actions>
		<!-- Make Game Repository -->
		<repository>
			<!-- Download required files -->
			<get>https://launcher.mojang.com/v1/objects/3dc3d84a581f14691199cf6831b71ed1296a9fdf/server.jar</get>
			<!-- Additionnal Actions -->
			<!-- Nothing to do! -->
		</repository>

		<!-- Install Game Server From Game Repository -->
		<installgame>
			<!-- Copy Game Server Files -->
			<rsync_c></rsync_c>
			<chmodx>server.jar</chmodx>
		</installgame>

		<!-- Update Game Server From Game Repository -->
		<updategame>
			<!-- Update Game Server Files -->
			<rsync_u>server.properties</rsync_u>
			<chmodx>server.jar</chmodx>
		</updategame>
	</actions>
</game>
